{
  "name": "NewsPicker",
  "version": "0.1",
  "description": "Open a new form with current page url",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "NewsPicker",
    "default_icon": "icon48.png"
  },
  "content_scripts": [
    {
      "js": [
        "contentscript.js"
      ],
      "matches": [
        "https://newspicks.com/*"
      ]
    }
  ],
  "permissions": [
    "https://newspicks.com/*"
  ],
  "manifest_version": 2
}
